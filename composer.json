{
    "name": "exolnet/laravel-translation",
    "description": "Library to manage Laravel translations",
    "keywords": [
        "exolnet",
        "laravel-translation"
    ],
    "homepage": "https://github.com/eXolnet/laravel-translations",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexandre Dâ€™Eschambeault",
            "homepage": "https://www.exolnet.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "illuminate/console": "~5.4.0|~5.5.0|~5.6.0",
        "illuminate/contracts": "~5.4.0|~5.5.0|~5.6.0",
        "illuminate/http": "~5.4.0|~5.5.0|~5.6.0",
        "illuminate/support": "~5.4.0|~5.5.0|~5.6.0",
        "illuminate/routing": "~5.4.0|~5.5.0|~5.6.0",
        "illuminate/translation": "~5.4.0|~5.5.0|~5.6.0"
    },
    "require-dev": {
        "mockery/mockery": "~0.9",
        "phpunit/phpunit": "^6",
        "orchestra/testbench": "~3.4.6|~3.5.0|~3.6.0"
    },
    "suggest": {
        "exolnet/laravel-translation-editor": "Allows translation edition through the browser"
    },
    "autoload": {
        "psr-4": {
            "Exolnet\\Translation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Exolnet\\Translation\\Tests\\": "tests"
        }
    },
    "scripts": {
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
