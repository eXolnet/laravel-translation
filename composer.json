{
    "name": "exolnet/laravel-translation",
    "description": "Library to manage Laravel translations",
    "keywords": [
        "exolnet",
        "laravel",
        "laravel-translation"
    ],
    "homepage": "https://github.com/eXolnet/laravel-translations",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexandre Dâ€™Eschambeault",
            "homepage": "https://www.exolnet.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "astrotomic/laravel-translatable": "^8.0|^9.0|^10.0|^11.0",
        "illuminate/contracts": "5.4.*|5.5.*|5.6.*|5.7.*|5.8.*|^6.0|^7.0",
        "illuminate/support": "5.4.*|5.5.*|5.6.*|5.7.*|5.8.*|^6.0|^7.0",
        "illuminate/routing": "5.4.*|5.5.*|5.6.*|5.7.*|5.8.*|^6.0|^7.0",
        "illuminate/translation": "5.4.*|5.5.*|5.6.*|5.7.*|5.8.*|^6.0|^7.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^6.0",
        "orchestra/testbench" : "^3.5|^4.0|^5.0",
        "squizlabs/php_codesniffer": "^3.3.2"
    },
    "suggest": {
        "exolnet/laravel-translation-editor": "Allows translation edition through the browser"
    },
    "autoload": {
        "psr-4": {
            "Exolnet\\Translation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Exolnet\\Translation\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Exolnet\\Translation\\TranslationServiceProvider"
            ],
            "aliases": {
                "LaravelTranslation": "Exolnet\\Translation\\Facades\\LaravelTranslation"
            }
        }
    },
    "scripts": {
        "lint": "vendor/bin/phpcs -p --standard=PSR2 config src tests",
        "lint-fix": "vendor/bin/phpcbf -p --standard=PSR2 config src tests",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
